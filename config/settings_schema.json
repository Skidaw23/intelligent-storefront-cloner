[
  {
    "name": "theme_info",
    "theme_name": "Royal Equips",
    "theme_version": "1.0.0",
    "theme_author": "Royal Equips Team",
    "theme_documentation_url": "https://royalequips.com/theme-docs",
    "theme_support_url": "https://royalequips.com/support"
  },
  {
    "name": "Royal Equips Brand",
    "settings": [
      {
        "type": "header",
        "content": "Brand Identity"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Royal Equips Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "unit": "px",
        "label": "Logo width",
        "default": 180
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32 x 32px .png recommended"
      },
      {
        "type": "color",
        "id": "brand_primary",
        "label": "Primary Brand Color",
        "default": "#1a1a1a",
        "info": "Dark metallic base"
      },
      {
        "type": "color",
        "id": "brand_accent_blue",
        "label": "Electric Blue Accent",
        "default": "#00bfff",
        "info": "Electric blue for highlights"
      },
      {
        "type": "color",
        "id": "brand_silver",
        "label": "Silver Accent",
        "default": "#c0c0c0",
        "info": "Metallic silver for details"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "label": "Color scheme groups",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#0a0a0a"
          },
          {
            "type": "color_background",
            "id": "background_gradient",
            "label": "Background gradient"
          },
          {
            "type": "color",
            "id": "text",
            "label": "Text",
            "default": "#ffffff"
          },
          {
            "type": "color",
            "id": "button",
            "label": "Button background",
            "default": "#00bfff"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "Button text",
            "default": "#ffffff"
          },
          {
            "type": "color",
            "id": "shadow",
            "label": "Shadow",
            "default": "#121212"
          }
        ]
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "eurostile_extended_2",
        "label": "Font",
        "info": "Selecting a different font can affect the speed of your store. [Learn more about system fonts.](https://help.shopify.com/manual/online-store/os/store-speed/improving-speed#fonts)"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading scale",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body text"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "roboto",
        "label": "Font",
        "info": "Selecting a different font can affect the speed of your store. [Learn more about system fonts.](https://help.shopify.com/manual/online-store/os/store-speed/improving-speed#fonts)"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "select",
        "id": "page_width",
        "options": [
          {
            "value": "1200",
            "label": "1200px"
          },
          {
            "value": "1400",
            "label": "1400px"
          },
          {
            "value": "1600",
            "label": "1600px"
          },
          {
            "value": "1800",
            "label": "1800px"
          }
        ],
        "default": "1600",
        "label": "Page width"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Spacing between sections",
        "default": 80
      },
      {
        "type": "header",
        "content": "Grid"
      },
      {
        "type": "range",
        "id": "spacing_grid_horizontal",
        "min": 4,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Horizontal spacing",
        "default": 24
      },
      {
        "type": "range",
        "id": "spacing_grid_vertical",
        "min": 4,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Vertical spacing",
        "default": 24
      }
    ]
  },
  {
    "name": "Animations",
    "settings": [
      {
        "type": "header",
        "content": "Reveal animations"
      },
      {
        "type": "checkbox",
        "id": "animations_reveal_on_scroll",
        "label": "Reveal sections on scroll",
        "default": true,
        "info": "Sections will animate into view as they're scrolled into the viewport"
      },
      {
        "type": "select",
        "id": "animations_hover_elements",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "fadeIn",
            "label": "Fade in"
          },
          {
            "value": "underline",
            "label": "Underline"
          }
        ],
        "default": "fadeIn",
        "label": "Hover animations for buttons and links"
      }
    ]
  },
  {
    "name": "Performance",
    "settings": [
      {
        "type": "header",
        "content": "Image optimization"
      },
      {
        "type": "checkbox",
        "id": "enable_lazy_loading",
        "label": "Enable lazy loading",
        "default": true,
        "info": "Images will load as they come into view"
      },
      {
        "type": "checkbox",
        "id": "enable_webp",
        "label": "Enable WebP format",
        "default": true,
        "info": "Use modern image format for better performance"
      },
      {
        "type": "header",
        "content": "3D Models"
      },
      {
        "type": "checkbox",
        "id": "enable_3d_models",
        "label": "Enable 3D model viewer",
        "default": true,
        "info": "Allow customers to view products in 3D and AR"
      }
    ]
  },
  {
    "name": "Products",
    "settings": [
      {
        "type": "header",
        "content": "Product cards"
      },
      {
        "type": "select",
        "id": "card_text_alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
