      {
        "type": "range",
        "id": "card_corner_radius",
        "min": 0,
        "max": 40,
        "step": 4,
        "unit": "px",
        "label": "Corner radius",
        "default": 12
      },
      {
        "type": "range",
        "id": "card_border_thickness",
        "min": 0,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Border thickness",
        "default": 1
      },
      {
        "type": "range",
        "id": "card_border_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Border opacity",
        "default": 10
      },
      {
        "type": "range",
        "id": "card_shadow_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Shadow opacity",
        "default": 20
      },
      {
        "type": "range",
        "id": "card_shadow_horizontal_offset",
        "min": -40,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Horizontal shadow offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "card_shadow_vertical_offset",
        "min": -40,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Vertical shadow offset",
        "default": 4
