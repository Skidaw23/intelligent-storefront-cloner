{{ 'section-newsletter.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="royal-newsletter section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="royal-newsletter__container">
      
      {%- if section.settings.show_background_elements -%}
        <div class="royal-newsletter__bg-elements">
          <div class="royal-bg-element royal-bg-element--1" data-parallax="0.1"></div>
          <div class="royal-bg-element royal-bg-element--2" data-parallax="0.15"></div>
          <div class="royal-bg-element royal-bg-element--3" data-parallax="0.2"></div>
        </div>
      {%- endif -%}

      <div class="royal-newsletter__content" data-reveal="fade-in">
        {%- if section.settings.icon != blank -%}
          <div class="royal-newsletter__icon">
            <img src="{{ section.settings.icon | image_url: width: 80 }}" 
                 alt="Newsletter icon" 
                 width="60" 
                 height="60"
                 loading="lazy">
          </div>
        {%- endif -%}
        
        {%- if section.settings.heading != blank -%}
          <h2 class="royal-heading-1 royal-newsletter__heading">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
        
        {%- if section.settings.description != blank -%}
          <div class="royal-body royal-newsletter__description">
            {{ section.settings.description }}
          </div>
        {%- endif -%}

        {%- form 'customer', class: 'royal-newsletter__form', data-newsletter-form: '' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          
          <div class="royal-newsletter__form-group" data-reveal="slide-in-up" data-reveal-delay="200">
            <div class="royal-newsletter__input-wrapper">
              <input 
                type="email" 
                name="contact[email]" 
                id="newsletter-email-{{ section.id }}"
                class="royal-newsletter__input"
                placeholder="{{ section.settings.input_placeholder | default: 'Enter your email address' }}"
                aria-label="{{ section.settings.input_placeholder | default: 'Enter your email address' }}"
                required
                autocomplete="email"
              >
              <div class="royal-newsletter__input-focus"></div>
            </div>
            
            <button type="submit" 
                    class="royal-newsletter__submit royal-btn royal-btn--{{ section.settings.button_style }}"
                    aria-label="{{ section.settings.button_text | default: 'Subscribe' }}"
                    data-magnetic>
              <span class="royal-newsletter__submit-text">
                {{ section.settings.button_text | default: 'Subscribe' }}
              </span>
              <span class="royal-newsletter__submit-loading">
                <svg class="royal-loading-spinner" width="20" height="20" viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              </span>
              <svg class="royal-newsletter__submit-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
              </svg>
            </button>
          </div>

          <div class="royal-newsletter__success" id="newsletter-success-{{ section.id }}">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
            </svg>
            <span>{{ section.settings.success_message | default: 'Thank you for subscribing!' }}</span>
          </div>

          <div class="royal-newsletter__error" id="newsletter-error-{{ section.id }}">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
            <span>{{ section.settings.error_message | default: 'Please enter a valid email address.' }}</span>
          </div>
        {%- endform -%}

        {%- if section.settings.show_privacy_notice -%}
          <div class="royal-newsletter__privacy" data-reveal="fade-in" data-reveal-delay="400">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18,8A6,6 0 0,0 12,2A6,6 0 0,0 6,8H4A2,2 0 0,0 2,10V20A2,2 0 0,0 4,22H20A2,2 0 0,0 22,20V10A2,2 0 0,0 20,8H18M12,4A4,4 0 0,1 16,8H8A4,4 0 0,1 12,4Z"/>
            </svg>
            <span>{{ section.settings.privacy_text | default: 'We respect your privacy. Unsubscribe at any time.' }}</span>
          </div>
        {%- endif -%}

        {%- if section.settings.show_social_links -%}
          <div class="royal-newsletter__social" data-reveal="slide-in-up" data-reveal-delay="600">
            <span class="royal-newsletter__social-label royal-caption">
              {{ section.settings.social_label | default: 'Follow Us' }}
            </span>
            <div class="royal-newsletter__social-links">
              {%- if settings.social_facebook_link != blank -%}
                <a href="{{ settings.social_facebook_link }}" 
                   class="royal-newsletter__social-link"
                   aria-label="Facebook"
                   target="_blank" 
                   rel="noopener">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
              {%- endif -%}
              
              {%- if settings.social_instagram_link != blank -%}
                <a href="{{ settings.social_instagram_link }}" 
                   class="royal-newsletter__social-link"
                   aria-label="Instagram"
                   target="_blank" 
                   rel="noopener">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
