<!-- 
=============================================================================
ROLEX CINEMATIC HERO SECTION - Premium Video Background with 3D Integration
=============================================================================
-->

<div class="rolex-cinematic-hero" 
     id="section-{{ section.id }}"
     data-section-type="rolex-cinematic-hero"
     data-section-id="{{ section.id }}">
  
  <!-- Background Video/Image -->
  <div class="rolex-hero-background">
    {%- if section.settings.hero_video != blank -%}
      <div class="rolex-hero-video-container">
        <video 
          class="rolex-hero-video" 
          autoplay 
          muted 
          loop 
          playsinline
          poster="{{ section.settings.hero_image | image_url: width: 1920 }}"
          data-animate="parallax" 
          data-speed="0.3">
          <source src="{{ section.settings.hero_video }}" type="video/mp4">
          <source src="{{ section.settings.hero_video_webm }}" type="video/webm">
        </video>
        <div class="rolex-video-overlay" style="background: linear-gradient({{ section.settings.overlay_angle }}deg, 
          {{ section.settings.overlay_color_1 | color_modify: 'alpha', section.settings.overlay_opacity_1 }},
          {{ section.settings.overlay_color_2 | color_modify: 'alpha', section.settings.overlay_opacity_2 }});"></div>
      </div>
    {%- elsif section.settings.hero_image != blank -%}
      <div class="rolex-hero-image-container">
        {%- liquid
          assign image_height = section.settings.hero_image.width | divided_by: section.settings.hero_image.aspect_ratio | round
          assign sizes = '100vw'
        -%}
        {{ section.settings.hero_image | image_url: width: 1920 | image_tag: 
           loading: 'eager',
           fetchpriority: 'high',
           width: section.settings.hero_image.width,
           height: image_height,
           sizes: sizes,
           alt: section.settings.hero_image.alt | default: section.settings.hero_title,
           class: 'rolex-hero-image',
           data-animate: 'parallax',
           data-speed: '0.5'
        }}
        <div class="rolex-image-overlay" style="background: linear-gradient({{ section.settings.overlay_angle }}deg, 
          {{ section.settings.overlay_color_1 | color_modify: 'alpha', section.settings.overlay_opacity_1 }},
          {{ section.settings.overlay_color_2 | color_modify: 'alpha', section.settings.overlay_opacity_2 }});"></div>
      </div>
    {%- endif -%}
  </div>

  <!-- 3D Watch Model Container (if enabled) -->
  {%- if section.settings.enable_3d_model and section.settings.watch_3d_model != blank -%}
    <div class="rolex-3d-container" 
         data-3d-model="{{ section.settings.watch_3d_model }}"
         data-3d-environment="{{ section.settings.environment_map | default: '' }}"
         data-3d-quality="{{ section.settings.model_quality | default: 'high' }}"
         data-3d-autorotate="{{ section.settings.auto_rotate | default: true }}"
         data-animate="fade-in">
      <div id="rolex-3d-viewer-{{ section.id }}" class="rolex-3d-viewer"></div>
      
      <!-- 3D Model Loading Indicator -->
      <div class="rolex-3d-loading">
        <div class="rolex-loading-spinner"></div>
        <p class="rolex-loading-text">{{ section.settings.loading_text | default: 'Loading Premium Experience...' }}</p>
        <div class="rolex-loading-progress">
          <div class="rolex-progress-bar"></div>
        </div>
      </div>
    </div>
  {%- endif -%}

  <!-- Hero Content -->
  <div class="rolex-hero-content">
    <div class="rolex-container">
      <div class="rolex-hero-inner" data-animate="fade-in">
        
        {%- if section.settings.hero_eyebrow != blank -%}
          <p class="rolex-hero-eyebrow" data-animate="slide-luxury" data-direction="up">
            {{ section.settings.hero_eyebrow }}
          </p>
        {%- endif -%}

        {%- if section.settings.hero_title != blank -%}
          <h1 class="rolex-hero-title" data-animate="slide-luxury" data-direction="left">
            {%- liquid
              assign title_parts = section.settings.hero_title | split: '[highlight]'
              if title_parts.size > 1
                assign before_highlight = title_parts[0]
                assign highlight_parts = title_parts[1] | split: '[/highlight]'
                assign highlighted_text = highlight_parts[0]
                assign after_highlight = highlight_parts[1]
                
                echo before_highlight
                echo '<span class="rolex-text-highlight">' | append: highlighted_text | append: '</span>'
                echo after_highlight
              else
                echo section.settings.hero_title
              endif
            -%}
          </h1>
        {%- endif -%}

        {%- if section.settings.hero_subtitle != blank -%}
          <p class="rolex-hero-subtitle" data-animate="slide-luxury" data-direction="right">
            {{ section.settings.hero_subtitle }}
          </p>
        {%- endif -%}

        {%- if section.settings.hero_description != blank -%}
          <div class="rolex-hero-description" data-animate="fade-in">
            {{ section.settings.hero_description }}
          </div>
        {%- endif -%}

        <!-- Call-to-Action Buttons -->
        {%- if section.settings.primary_button_text != blank or section.settings.secondary_button_text != blank -%}
          <div class="rolex-hero-buttons" data-animate="stagger" data-stagger="0.2">
            
            {%- if section.settings.primary_button_text != blank -%}
              <a href="{{ section.settings.primary_button_url | default: '#' }}" 
                 class="rolex-button rolex-button--primary rolex-button--{{ section.settings.primary_button_style | default: 'luxury' }}">
                <span class="rolex-button-text">{{ section.settings.primary_button_text }}</span>
                {%- if section.settings.primary_button_icon != blank -%}
                  <span class="rolex-button-icon">
                    {%- render 'rolex-icon', icon: section.settings.primary_button_icon -%}
                  </span>
                {%- endif -%}
              </a>
            {%- endif -%}

            {%- if section.settings.secondary_button_text != blank -%}
              <a href="{{ section.settings.secondary_button_url | default: '#' }}" 
                 class="rolex-button rolex-button--secondary rolex-button--{{ section.settings.secondary_button_style | default: 'outline' }}">
                <span class="rolex-button-text">{{ section.settings.secondary_button_text }}</span>
                {%- if section.settings.secondary_button_icon != blank -%}
                  <span class="rolex-button-icon">
                    {%- render 'rolex-icon', icon: section.settings.secondary_button_icon -%}
                  </span>
                {%- endif -%}
              </a>
            {%- endif -%}

          </div>
        {%- endif -%}

        <!-- Trust Indicators -->
        {%- if section.settings.show_trust_indicators -%}
          <div class="rolex-trust-indicators" data-animate="fade-in">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'trust_indicator' -%}
                  <div class="rolex-trust-item" {{ block.shopify_attributes }}>
                    {%- if block.settings.trust_icon != blank -%}
                      <div class="rolex-trust-icon">
                        {%- render 'rolex-icon', icon: block.settings.trust_icon -%}
                      </div>
                    {%- endif -%}
                    {%- if block.settings.trust_text != blank -%}
                      <span class="rolex-trust-text">{{ block.settings.trust_text }}</span>
                    {%- endif -%}
                  </div>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        {%- endif -%}

      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  {%- if section.settings.show_scroll_indicator -%}
    <div class="rolex-scroll-indicator" data-animate="fade-in">
      <div class="rolex-scroll-icon">
        {%- render 'rolex-icon', icon: 'chevron-down' -%}
      </div>
      <p class="rolex-scroll-text">{{ section.settings.scroll_text | default: 'Discover More' }}</p>
    </div>
  {%- endif -%}

</div>

<!-- Section Styles -->
<style>
.rolex-cinematic-hero {
  position: relative;
  min-height: {{ section.settings.section_height }}vh;
  display: flex;
  align-items: {{ section.settings.content_alignment }};
  justify-content: center;
  overflow: hidden;
  color: {{ section.settings.text_color | default: '#ffffff' }};
  background-color: {{ section.settings.fallback_color | default: '#0c0c0c' }};
}

.rolex-hero-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.rolex-hero-video-container,
.rolex-hero-image-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.rolex-hero-video,
.rolex-hero-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: {{ section.settings.focal_point | default: 'center center' }};
}

.rolex-video-overlay,
.rolex-image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.rolex-3d-container {
  position: absolute;
  top: 50%;
  right: {{ section.settings.model_position_x | default: 10 }}%;
  transform: translateY(-50%);
  width: {{ section.settings.model_width | default: 40 }}%;
  height: {{ section.settings.model_height | default: 60 }}vh;
  z-index: 5;
}

.rolex-3d-viewer {
  width: 100%;
  height: 100%;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 32px 64px rgba(0,0,0,0.15);
}

.rolex-hero-content {
  position: relative;
  z-index: 10;
  width: 100%;
  padding: 2rem 0;
}

.rolex-hero-inner {
  max-width: {{ section.settings.content_width | default: 600 }}px;
  text-align: {{ section.settings.text_alignment | default: 'left' }};
}

.rolex-hero-eyebrow {
  font-size: 0.875rem;
  font-weight: 500;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  color: {{ section.settings.eyebrow_color | default: 'var(--rolex-gold)' }};
  margin-bottom: 1rem;
}

.rolex-hero-title {
  font-size: clamp(2.5rem, 5vw, {{ section.settings.title_size | default: 4 }}rem);
  font-weight: {{ section.settings.title_weight | default: 700 }};
  line-height: 1.1;
  margin-bottom: 1.5rem;
  text-shadow: {{ section.settings.text_shadow | default: '0 2px 10px rgba(0,0,0,0.3)' }};
}

.rolex-text-highlight {
  background: linear-gradient(135deg, var(--rolex-gold), var(--rolex-champagne));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.rolex-hero-subtitle {
  font-size: clamp(1.25rem, 2.5vw, {{ section.settings.subtitle_size | default: 1.5 }}rem);
  font-weight: {{ section.settings.subtitle_weight | default: 400 }};
  margin-bottom: 2rem;
  opacity: 0.9;
}

.rolex-hero-description {
  font-size: 1.125rem;
  line-height: 1.6;
  margin-bottom: 2.5rem;
  opacity: 0.8;
}

.rolex-hero-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-bottom: 3rem;
}

.rolex-trust-indicators {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
  opacity: 0.7;
}

.rolex-trust-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.875rem;
}

.rolex-scroll-indicator {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  z-index: 10;
  animation: rolex-bounce 2s infinite;
}

@keyframes rolex-bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateX(-50%) translateY(0);
  }
  40% {
    transform: translateX(-50%) translateY(-10px);
  }
  60% {
    transform: translateX(-50%) translateY(-5px);
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .rolex-cinematic-hero {
    min-height: {{ section.settings.mobile_height | default: 80 }}vh;
  }
  
  .rolex-3d-container {
    display: {{ section.settings.hide_3d_mobile | default: false }};
    position: static;
    width: 100%;
    height: 40vh;
    margin-bottom: 2rem;
    transform: none;
  }
  
  .rolex-hero-inner {
    text-align: center;
  }
  
  .rolex-hero-buttons {
    justify-content: center;
  }
  
  .rolex-trust-indicators {
    justify-content: center;
  }
}

/* 3D Loading Styles */
.rolex-3d-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: var(--rolex-deep-black);
}

.rolex-loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(163, 126, 44, 0.3);
  border-top: 3px solid var(--rolex-gold);
  border-radius: 50%;
  animation: rolex-spin 1s linear infinite;
  margin: 0 auto 1rem;
}

@keyframes rolex-spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.rolex-loading-progress {
  width: 200px;
  height: 2px;
  background: rgba(163, 126, 44, 0.2);
  border-radius: 1px;
  overflow: hidden;
  margin: 1rem auto 0;
}

.rolex-progress-bar {
  height: 100%;
  background: linear-gradient(90deg, var(--rolex-gold), var(--rolex-green));
  width: 0%;
  transition: width 0.3s ease;
}
</style>

<!-- Section JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const section = document.getElementById('section-{{ section.id }}');
  const viewer3D = section.querySelector('.rolex-3d-container');
  
  if (viewer3D && typeof createWatch3DViewer !== 'undefined') {
    const modelUrl = viewer3D.dataset['3dModel'];
    const environmentUrl = viewer3D.dataset['3dEnvironment'];
    const quality = viewer3D.dataset['3dQuality'];
    const autoRotate = viewer3D.dataset['3dAutorotate'] === 'true';
    
    const viewerContainer = viewer3D.querySelector('.rolex-3d-viewer');
    const loadingContainer = viewer3D.querySelector('.rolex-3d-loading');
    const progressBar = loadingContainer.querySelector('.rolex-progress-bar');
    
    // Initialize 3D viewer
    const watch3D = createWatch3DViewer(viewerContainer, modelUrl, {
      environmentUrl: environmentUrl || undefined,
      quality: quality,
      autoRotate: autoRotate,
      enableControls: true
    }, {
      onProgress: (progress) => {
        progressBar.style.width = progress + '%';
      },
      onLoad: () => {
        loadingContainer.style.opacity = '0';
        setTimeout(() => {
          loadingContainer.style.display = 'none';
        }, 300);
      },
      onError: (error) => {
        console.error('3D Model loading failed:', error);
        loadingContainer.innerHTML = '<p>Unable to load 3D model</p>';
      }
    });
  }
  
  // Optimize video performance
  const video = section.querySelector('.rolex-hero-video');
  if (video) {
    // Pause video when not visible to save bandwidth
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          video.play();
        } else {
          video.pause();
        }
      });
    });
    observer.observe(section);
  }
});
</script>

