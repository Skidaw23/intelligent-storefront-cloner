<style>
  .testimonials-section {
    background: #f8f8f8;
    padding: 50px 20px;
    text-align: center;
  }

  .testimonials-heading {
    font-size: 28px;
    color: #004225;
    margin-bottom: 30px;
    font-weight: bold;
  }

  .testimonials-grid {
    display: flex;
    justify-content: center;
    gap: 30px;
    flex-wrap: wrap;
    max-width: 900px;
    margin: 0 auto;
  }

  .testimonial {
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 280px;
    text-align: center;
  }

  .testimonial img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-bottom: 10px;
  }

  .customer-name {
    font-weight: bold;
    color: #004225;
    font-size: 18px;
    margin-bottom: 5px;
  }

  .stars {
    color: #FFD700;
    font-size: 20px;
    margin-bottom: 10px;
  }

  .testimonial-text {
    font-size: 16px;
    color: #333;
    margin-bottom: 10px;
  }

  .testimonials-cta {
    margin-top: 30px;
  }

  .cta-button {
    display: inline-block;
    background: #D4AF37;
    color: white;
    padding: 12px 24px;
    font-size: 16px;
    border-radius: 5px;
    text-decoration: none;
    transition: 0.3s;
  }

  .cta-button:hover {
    background: #B89630;
  }

  @media (max-width: 768px) {
    .testimonials-grid {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

