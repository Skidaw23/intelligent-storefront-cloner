{% schema %}
{
  "name": "Meet Our Team",
  "settings": [],
  "blocks": [
    {
      "type": "member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Profile Picture"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "John Doe"
        },
        {
          "type": "text",
          "id": "position",
          "label": "Position",
          "default": "Founder & CEO"
        },
        {
          "type": "richtext",
          "id": "bio",
          "label": "Short Bio",
          "default": "<p>Short description about the team member.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Meet Our Team",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="our-team">
  <h2>Meet Our Team</h2>
  <div class="team-container">
    {% for block in section.blocks %}
      <div class="team-member">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.name }}">
        {% endif %}
        <h3>{{ block.settings.name }}</h3>
        <p class="position">{{ block.settings.position }}</p>
        <div class="bio">{{ block.settings.bio }}</div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.our-team {
  text-align: center;
  padding: 50px 20px;
}

.team-container {
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
}

.team-member {
  text-align: center;
  max-width: 300px;
}

.team-member img {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.position {
  font-weight: bold;
  color: gray;
}

.bio {
  font-size: 14px;
  color: #555;
}
</style>

