        // Google Analytics 4
        if (typeof gtag !== 'undefined') {
          gtag('event', eventName, {
            event_category: 'Newsletter',
            ...properties
          });
        }

        // Shopify Analytics
        if (typeof analytics !== 'undefined' && analytics.track) {
          analytics.track(eventName, {
            category: 'Newsletter',
            ...properties
          });
        }

