{%- comment -%}
  Renders Rolex luxury icons for the theme
  
  Accepts:
  - icon: {String} Icon name (required)
  - size: {String} Icon size class (optional)
  - class: {String} Additional CSS classes (optional)
  
  Usage:
  {%- render 'rolex-icon', icon: 'crown', size: 'large', class: 'rolex-text-gold' -%}
{%- endcomment -%}

{%- liquid
  assign icon_name = icon | default: 'crown'
  assign icon_size = size | default: 'medium'
  assign icon_class = 'rolex-icon rolex-icon--' | append: icon_size
  
  if class != blank
    assign icon_class = icon_class | append: ' ' | append: class
  endif
-%}

<svg class="{{ icon_class }}" aria-hidden="true" focusable="false">
  {%- case icon_name -%}
    {%- when 'crown' -%}
      <path d="M12 6L9 9L6 6L4 14H20L18 6L15 9L12 6Z" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      
    {%- when 'arrow-right' -%}
      <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      
    {%- when 'chevron-down' -%}
      <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      
    {%- when 'play' -%}
      <path d="M8 5V19L19 12L8 5Z" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      
    {%- when 'shield' -%}
      <path d="M12 22S8 18 8 12V7L12 5L16 7V12C16 18 12 22 12 22Z" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      
    {%- when 'award' -%}
      <circle cx="12" cy="8" r="7" stroke="currentColor" stroke-width="2" fill="none"/>
      <path d="M8.21 13.89L7 23L12 20L17 23L15.79 13.88" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      
    {%- when 'clock' -%}
      <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
      <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      
    {%- when 'star' -%}
      <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      
    {%- when 'truck' -%}
      <rect x="1" y="3" width="15" height="13" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M16 8H20L23 11V16H21" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      <circle cx="5.5" cy="18.5" r="2.5" stroke="currentColor" stroke-width="2" fill="none"/>
      <circle cx="18.5" cy="18.5" r="2.5" stroke="currentColor" stroke-width="2" fill="none"/>
      
    {%- when 'lock' -%}
      <rect x="3" y="11" width="18" height="11" rx="2" ry="2" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      <path d="M7 11V7A5 5 0 0 1 17 7V11" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      
    {%- else -%}
      <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
      
  {%- endcase -%}
</svg>

<style>
.rolex-icon {
  display: inline-block;
  vertical-align: middle;
  
  &--small {
    width: 1rem;
    height: 1rem;
  }
  
  &--medium {
    width: 1.5rem;
    height: 1.5rem;
  }
  
  &--large {
    width: 2rem;
    height: 2rem;
  }
  
  &--xl {
    width: 2.5rem;
    height: 2.5rem;
  }
}
</style>