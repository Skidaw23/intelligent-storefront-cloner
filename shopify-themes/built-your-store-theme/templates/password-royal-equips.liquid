---
layout: theme
---

<div class="password-page">
  <div class="password-page__content">
    <div class="password-page__brand">
      {%- if settings.logo != blank -%}
        <img
          class="password-page__logo"
          src="{{ settings.logo | image_url: width: 300 }}"
          alt="{{ shop.name }}"
          width="300"
          height="{{ 300 | divided_by: settings.logo.aspect_ratio | ceil }}"
        >
      {%- else -%}
        <h1 class="password-page__title">{{ shop.name }}</h1>
      {%- endif -%}
    </div>

    <div class="password-page__main">
      <h2 class="password-page__heading">
        {{ 'sections.header.password_page_heading' | t }}
      </h2>
      
      <p class="password-page__message">
        {{ 'sections.header.password_page_message' | t }}
      </p>

      <div class="password-page__form-container">
        {%- form 'storefront_password', class: 'password-page__form' -%}
          {%- if form.errors -%}
            <div class="form__message form__message--error" role="alert">
              <h3 class="form-status__title" tabindex="-1" autofocus>{{ 'templates.contact.form.error_heading' | t }}</h3>
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}

          <div class="password-page__input-group">
            <label for="Password" class="password-page__label visually-hidden">
              {{ 'sections.header.password_page_password_label' | t }}
            </label>
            <input
              type="password"
              name="password"
              id="Password"
              class="password-page__input field__input"
              autocomplete="current-password"
              placeholder="{{ 'sections.header.password_page_password_placeholder' | t }}"
              required
            >
            <button type="submit" class="password-page__button button royal-button">
              {{ 'sections.header.password_page_login_form_submit' | t }}
            </button>
          </div>
        {%- endform -%}
      </div>

      <div class="password-page__actions">
        {%- unless shop.password_message == blank -%}
          <div class="password-page__admin-message rte">
            {{ shop.password_message }}
          </div>
        {%- endunless -%}

        <div class="password-page__social">
          {%- if settings.social_facebook_link != blank -%}
            <a href="{{ settings.social_facebook_link }}" class="password-page__social-link" aria-label="Facebook">
              <svg class="icon icon-facebook" aria-hidden="true" focusable="false" role="presentation">
                <use href="#icon-facebook">
              </svg>
            </a>
          {%- endif -%}
          
          {%- if settings.social_instagram_link != blank -%}
            <a href="{{ settings.social_instagram_link }}" class="password-page__social-link" aria-label="Instagram">
              <svg class="icon icon-instagram" aria-hidden="true" focusable="false" role="presentation">
                <use href="#icon-instagram">
              </svg>
            </a>
          {%- endif -%}
          
          {%- if settings.social_twitter_link != blank -%}
            <a href="{{ settings.social_twitter_link }}" class="password-page__social-link" aria-label="Twitter">
              <svg class="icon icon-twitter" aria-hidden="true" focusable="false" role="presentation">
                <use href="#icon-twitter">
              </svg>
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>

  <div class="password-page__background">
    <div class="password-page__gradient"></div>
  </div>
</div>

<style>
.password-page {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background: var(--royal-primary);
  overflow: hidden;
}

.password-page__background {
  position: absolute;
  inset: 0;
  z-index: -1;
}

.password-page__gradient {
  position: absolute;
  inset: 0;
  background: radial-gradient(
    circle at 50% 50%,
    rgba(0, 191, 255, 0.1) 0%,
    rgba(26, 26, 26, 0.9) 50%,
    var(--royal-primary) 100%
  );
  animation: royal-pulse 4s ease-in-out infinite alternate;
}

@keyframes royal-pulse {
  0% { opacity: 0.8; }
  100% { opacity: 1; }
}

.password-page__content {
  max-width: 50rem;
  padding: 4rem 2rem;
  text-align: center;
  z-index: 1;
}

.password-page__brand {
  margin-bottom: 4rem;
}

.password-page__logo {
  max-width: 100%;
  height: auto;
  filter: drop-shadow(0 0 20px rgba(0, 191, 255, 0.3));
}

.password-page__title {
  font-size: 4rem;
  font-weight: 900;
  color: var(--royal-electric-blue);
  text-shadow: 0 0 20px rgba(0, 191, 255, 0.3);
  margin: 0;
}

.password-page__heading {
  font-size: 3rem;
  font-weight: 700;
  color: white;
  margin-bottom: 1.5rem;
  line-height: 1.2;
}

.password-page__message {
  font-size: 1.8rem;
  color: var(--royal-silver);
  margin-bottom: 4rem;
  line-height: 1.5;
  opacity: 0.9;
}

.password-page__form-container {
  margin-bottom: 4rem;
}

.password-page__input-group {
  display: flex;
  gap: 1rem;
  max-width: 40rem;
  margin: 0 auto;
  align-items: stretch;
}

.password-page__input {
  flex: 1;
  padding: 1.5rem 2rem;
  font-size: 1.6rem;
  border: 2px solid var(--royal-silver);
  border-radius: 8px;
  background: rgba(26, 26, 26, 0.8);
  backdrop-filter: blur(10px);
  color: white;
  transition: all 0.3s ease;
}

.password-page__input::placeholder {
  color: var(--royal-silver);
  opacity: 0.7;
}

.password-page__input:focus {
  outline: none;
  border-color: var(--royal-electric-blue);
  box-shadow: 0 0 20px rgba(0, 191, 255, 0.2);
  background: rgba(26, 26, 26, 0.9);
}

.password-page__button {
  padding: 1.5rem 3rem;
  font-size: 1.6rem;
  font-weight: 600;
  white-space: nowrap;
}

.password-page__admin-message {
  margin-bottom: 3rem;
  font-size: 1.6rem;
  color: var(--royal-silver);
  line-height: 1.6;
}

.password-page__social {
  display: flex;
  gap: 2rem;
  justify-content: center;
  align-items: center;
}

.password-page__social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 5rem;
  height: 5rem;
  border-radius: 50%;
  background: rgba(192, 192, 192, 0.1);
  color: var(--royal-silver);
  transition: all 0.3s ease;
  text-decoration: none;
}

.password-page__social-link:hover {
  background: var(--royal-electric-blue);
  color: white;
  transform: translateY(-3px);
  box-shadow: 0 10px 20px rgba(0, 191, 255, 0.3);
}

.password-page__social-link .icon {
  width: 2.4rem;
  height: 2.4rem;
}

.form__message--error {
  background: rgba(255, 77, 77, 0.1);
  border: 2px solid #ff4d4d;
  border-radius: 8px;
  padding: 2rem;
  margin-bottom: 2rem;
  color: #ff4d4d;
}

@media screen and (max-width: 768px) {
  .password-page__content {
    padding: 2rem 1rem;
  }
  
  .password-page__heading {
    font-size: 2.4rem;
  }
  
  .password-page__message {
    font-size: 1.6rem;
  }
  
  .password-page__input-group {
    flex-direction: column;
  }
  
  .password-page__button {
    padding: 1.5rem 2rem;
  }
}
</style>