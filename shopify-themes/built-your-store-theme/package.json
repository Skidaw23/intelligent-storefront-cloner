{
  "name": "rolex-inspired-shopify-theme",
  "version": "1.0.0",
  "description": "A luxury Shopify theme inspired by Rolex.com with advanced 3D visualizations and premium UX",
  "main": "index.js",
  "scripts": {
    "dev": "shopify theme dev",
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass assets/scss:assets --style=compressed --source-map",
    "build:js": "webpack --mode=production",
    "watch": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "watch:css": "sass assets/scss:assets --style=expanded --source-map --watch",
    "watch:js": "webpack --mode=development --watch",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint \"assets/scss/**/*.scss\"",
    "lint:js": "eslint \"assets/js/**/*.js\" \"assets/ts/**/*.ts\"",
    "test": "jest",
    "optimize": "npm run optimize:images && npm run optimize:js",
    "optimize:images": "imagemin \"assets/images/**/*\" --out-dir=assets/images --plugin=imagemin-webp --plugin=imagemin-mozjpeg --plugin=imagemin-pngquant",
    "optimize:js": "webpack --mode=production --optimize-minimize",
    "validate": "shopify theme check",
    "deploy": "shopify theme push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Skidaw23/intelligent-storefront-cloner.git"
  },
  "keywords": [
    "shopify",
    "theme",
    "luxury",
    "rolex",
    "3d",
    "watches",
    "e-commerce"
  ],
  "author": "Intelligent Storefront Cloner",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/three": "^0.158.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-webp": "^7.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "sass": "^1.69.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "three": "^0.158.0",
    "gsap": "^3.12.2",
    "lottie-web": "^5.12.2",
    "intersection-observer": "^0.12.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}