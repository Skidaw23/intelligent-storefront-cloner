---
layout: theme
---

<div class="template-404 page-width section-template--16px-space-bottom">
  <div class="template-404__content">
    <h1 class="template-404__title">
      {{ 'templates.404.title' | t }}
    </h1>
    
    <p class="template-404__subtitle">
      {{ 'templates.404.subtext' | t }}
    </p>

    <div class="template-404__search">
      <form action="{{ routes.search_url }}" method="get" role="search" class="search">
        <div class="field">
          <input
            class="search__input field__input"
            id="Search-In-Template"
            type="search"
            name="q"
            value="{{ search.terms | escape }}"
            placeholder="{{ 'general.search.search' | t }}"
            {%- if settings.predictive_search_enabled -%}
              role="combobox"
              aria-expanded="false"
              aria-owns="predictive-search-results-list"
              aria-controls="predictive-search-results-list"
              aria-haspopup="listbox"
              aria-autocomplete="list"
              autocorrect="off"
              autocomplete="off"
              autocapitalize="off"
              spellcheck="false"
            {%- endif -%}
          >
          <label class="field__label" for="Search-In-Template">{{ 'general.search.search' | t }}</label>
          <button class="search__button field__button" aria-label="{{ 'general.search.search' | t }}">
            <svg class="icon icon-search" aria-hidden="true" focusable="false" role="presentation">
              <use href="#icon-search">
            </svg>
          </button>
        </div>

        {%- if settings.predictive_search_enabled -%}
          <div class="predictive-search predictive-search--header" tabindex="-1" data-predictive-search>
            <div class="predictive-search__loading-state">
              <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
              </svg>
            </div>
          </div>
          <span class="predictive-search-status visually-hidden" role="status" aria-hidden="true"></span>
        {%- endif -%}
      </form>
    </div>

    <div class="template-404__actions">
      <a href="{{ routes.root_url }}" class="button royal-button">
        {{ 'general.continue_shopping' | t }}
      </a>
    </div>
  </div>
</div>

<style>
.template-404 {
  text-align: center;
  padding: 8rem 0;
  min-height: 50vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.template-404__content {
  max-width: 60rem;
  margin: 0 auto;
}

.template-404__title {
  font-size: 8rem;
  font-weight: 900;
  color: var(--royal-electric-blue);
  margin-bottom: 2rem;
  text-shadow: 0 0 20px rgba(0, 191, 255, 0.3);
  background: linear-gradient(135deg, var(--royal-electric-blue), var(--royal-silver));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.template-404__subtitle {
  font-size: 2rem;
  color: var(--royal-silver);
  margin-bottom: 4rem;
  opacity: 0.8;
}

.template-404__search {
  max-width: 40rem;
  margin: 0 auto 4rem;
}

.template-404__search .search {
  position: relative;
}

.template-404__search .field {
  position: relative;
  border: 2px solid var(--royal-silver);
  border-radius: 8px;
  background: rgba(26, 26, 26, 0.8);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.template-404__search .field:focus-within {
  border-color: var(--royal-electric-blue);
  box-shadow: 0 0 20px rgba(0, 191, 255, 0.2);
}

.template-404__actions {
  margin-top: 4rem;
}

@media screen and (max-width: 768px) {
  .template-404__title {
    font-size: 4rem;
  }
  
  .template-404__subtitle {
    font-size: 1.6rem;
  }
}
</style>